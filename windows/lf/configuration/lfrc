set ifs "\n"
set shell pwsh

# quick rename using r
map r push :rename<space>

# use a and A to create files and directories
map A :push %mkdir<space>
map a :push %New-Item<space>

# open explorer in current directory
map S :push %explorer<space>.<enter>

# archiving
cmd zip $7z a %f%
cmd extract_here $7z e %f%

# custom file preview
set previewer bat
