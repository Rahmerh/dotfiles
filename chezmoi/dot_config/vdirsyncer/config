[general]
status_path = "~/.config/vdirsyncer/status/"

[pair work]
a = "work_local"
b = "work_remote"
collections = null

[pair personal]
a = "personal_local"
b = "personal_remote"
collections = null

[storage personal_local]
type = "filesystem"
path = "~/.config/vdirsyncer/calendars/personal/"
fileext = ".ics"

[storage personal_remote]
type = "http"
url.fetch = [ "command", "~/.config/vdirsyncer/get-personal-url" ]

[storage work_local]
type = "filesystem"
path = "~/.config/vdirsyncer/calendars/work/"
fileext = ".ics"

[storage work_remote]
type = "http"
url.fetch = [ "command", "~/.config/vdirsyncer/get-work-url" ]
