# vim: filetype=neomuttrc
source ~/.config/neomutt/keys/personal_keys

# IMAP settings
set realname="Bas Bouwhuis"
set from      = $my_user
set use_from  = yes

set imap_user = $my_user
set imap_pass = $my_pass

set mbox_type     = Maildir
set folder        = ~/.config/neomutt/mails/Personal

set spoolfile     = +Inbox
set postponed     = +Drafts
set record        = +Sent
set trash         = +Trash

mailboxes +Inbox +Drafts +Sent +Trash

set header_cache = ~/.cache/mutt-cache/
set message_cachedir = ~/.cache/mutt-cache/

# SMTP settings    
set sendmail = "msmtp -a personal --tls-certcheck=off"
