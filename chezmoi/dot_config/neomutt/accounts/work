# vim: filetype=neomuttrc
source ~/.config/neomutt/keys/work_keys

# IMAP settings
set realname="Bas Bouwhuis"
set from = "bas.bouwhuis@medapp.nl"
alias me bas.bouwhuis <bas.bouwhuis@medapp.nl>

set imap_user = $my_user
set imap_pass = $my_pass

set hostname = "medapp.nl"
set mbox_type     = Maildir
set folder        = imaps://$my_user:$imap_pass@imap.gmail.com:993
set spoolfile = +INBOX
set postponed = +Drafts
set trash = +Trash
set record = +Sent
mailboxes "=Archive" "=INBOX" "=[Gmail]/Alle e-mail" "=[Gmail]/Belangrijk" "=[Gmail]/Concepten" "=[Gmail]/Met ster" "=[Gmail]/Prullenbak" "=[Gmail]/Spam" "=[Gmail]/Verzonden berichten"
set mail_check    = 30 # seconds

set header_cache = ~/.cache/mutt-cache/
set message_cachedir = ~/.cache/mutt-cache/

# SMTP settings    
set realname  ='Bas Bouwhuis'
set from      = $my_user
set smtp_pass = $my_pass
set use_from  = yes
set smtp_url = smtps://$my_user:$smtp_pass@smtp.gmail.com:465
set ssl_force_tls = yes
set ssl_starttls = yes
