# vim: filetype=neomuttrc
source ~/.config/neomutt/keys/work_keys

# IMAP settings
set realname="Bas Bouwhuis"
set from = $my_user

set imap_user = $my_user
set imap_pass = $my_pass

set hostname = $my_host
set mbox_type     = Maildir
set folder        = /Users/bas/.config/neomutt/mails/Work

set record = +[Gmail]/Verzonden berichten
set postponed = +[Gmail]/Concepten
set spoolfile = +Inbox
set trash = +[Gmail]/Prullenbak

mailboxes "=Inbox" "=[Gmail]/Alle e-mail" "=[Gmail]/Belangrijk" "=[Gmail]/Concepten" "=[Gmail]/Met ster" "=[Gmail]/Prullenbak" "=[Gmail]/Spam" "=[Gmail]/Verzonden berichten"

set header_cache = ~/.cache/mutt-cache/
set message_cachedir = ~/.cache/mutt-cache/

# SMTP settings    
set sendmail = "msmtp -a work"
