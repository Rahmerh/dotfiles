# Optiosn
set hidden
set shell /usr/bin/fish
set previewer ~/.config/lf/preview.sh
set cleaner ~/.config/lf/clean.sh

# Commands
cmd open ${{
    if test -d "$f"
        cd "$f"
    else
        $EDITOR "$f"
    end
}}

cmd image ${{
    echo "$f"
    chafa $f
}}

map d delete

# Keymaps
map l open
map <enter> open
