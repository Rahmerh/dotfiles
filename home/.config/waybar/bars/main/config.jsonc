{
  "layer": "top",
  "position": "top",
  "height": 55,
  "spacing": 0,
  "modules-left": [
    "cpu",
    "memory",
    "pulseaudio"
  ],
  "modules-center": ["wlr/taskbar"],
  "modules-right": [
    "tray",
    "clock"
  ],
  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-muted": " \udb81\udd81",
    "format-icons": {
      "default": [
        "\uf026",
        "\uf027",
        "\uf028"
      ]
    },
    "on-click": "~/.config/waybar/scripts/toggle-slider-popup.sh",
    "on-click-right": "pavucontrol -t 3",
    "on-click-middle": "pactl -- set-sink-mute 0 toggle"
  },
  "memory": {
    "format": " \uefc5   {used:0.1f}G/{total:0.1f}G "
  },
  "cpu": {
    "format": " \ue266   {usage}% "
  },
  "clock": {
    "interval": 1,
    "timezone": "Europe/Amsterdam",
    "format": " \uf073  {:%d-%m-%Y   \uf017  %H:%M} "
  },
  "tray": {
    "icon-size": 20,
    "spacing": 6
  },
  "wlr/taskbar": {
    "format": "{icon}",
    "on-click": "activate",
    "on-click-middle": "close",
    "tooltip": true,
    "max-length": 30
  }
}
